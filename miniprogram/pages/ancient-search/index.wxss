page {
  background-color: #fff;
}
.search {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  box-sizing: border-box;
  padding: 10rpx 40rpx;
}
.search input {
  width: 580rpx;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ccc;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
}
.search view {
  width: 150rpx;
  height: 80rpx;
  background: #fff;
  border: 1rpx solid #ccc;
  border-left: none;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
  color: #666;
}
.search-list {
  overflow: hidden;
  padding: 40rpx 0;
  box-sizing: border-box;
}
.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}
.poem-name {
  width: 500rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.poem-desc {
  width: 270rpx;
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

.search-tag {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  height: 100rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}
.search-tag .tag {
  width: 470rpx;
}
.search-tag .num {
  width: 200rpx;
  text-align: right;
}
.page-tags {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  padding: 0 40rpx;
  font-size: 24rpx;
  color: #333;
  text-align: center;
}
.page-tags .tag {
  width: 150rpx;
  height: 60rpx;
  border: 1rpx solid #eee;
  margin: 0 6rpx 10rpx 6rpx;
  background-color: #eee;
  color: #F56C6C;
  line-height: 60rpx;
}
.page-tags .tag.active {
  background: #F56C6C;
  color: #fff;
}