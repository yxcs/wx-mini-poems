.tab {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 40rpx;
}
.tab .item {
  width: 33.33%;
  height: 100%;
  line-height: 80rpx;
}
.tab .item:nth-child(2) {
  border-left: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
}
.tab .item.active {
  background: #F56C6C;
  color: #fff;
}

.section {
  box-sizing: border-box;
  width: 670rpx;
  padding: 20rpx;
  background-color: rgba(239,239,239,0.3); /*0.3*/
  margin: 0 auto 20rpx auto;
}
.section.sentence {
  text-align: center;
  margin-top: 20rpx;
}
.section .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 10rpx;
}
.section .author {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}
.section .item {
  font-size: 28rpx;
  letter-spacing: 2rpx;
  margin-bottom: 10rpx;
}
.section .res {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}
button {
  width: 670rpx;
  margin: 40rpx 0 0 40rpx;
}

/* 分享卡片样式定制 */
.dialog-wrap {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.7);
}
.dialog {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.dialog-content {
  display: flex;
  justify-content: space-between;
  justify-items: center;
  box-sizing: border-box;
  width: 560rpx;
  height: 750rpx;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 4rpx;
  letter-spacing: 4rpx;
  font-size: 28rpx;
  color: #333;
}
.close-btn {
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
}
.close-btn image {
  width: 100%;
  height: 100%;
}
.dialog .desc {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 120rpx;
  height: 100%;
}
.dialog .desc view {
  width: 6
  0rpx;
  height: 100%;
  writing-mode: vertical-rl;
  text-align: right;
  line-height: 80rpx;
}
.dialog .content {
  display: flex;
  flex-direction: row-reverse;
  justify-content: flex-start;
  align-items: center;
  width: 340rpx;
  height: 100%;
}
.dialog .content view {
  writing-mode: vertical-rl;
  text-align: left;
  width: 50rpx;
  height: 100%;
  line-height: 50rpx;
}

.collection {
  position: fixed;
  right: 20rpx;
  bottom: 60rpx;
  width: 80rpx;
  height: 50rpx;
}
.collection button {
  width: 80rpx;
  padding: 0;
  margin: 0;
}

.btn-group {
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn-group .btn {
  width: 334rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: #999;
  text-align: center;
  line-height: 60rpx;
  background: #fff;
}
.btn-group .btn.center {
  border-left: 1px solid #ccc;
}
.btn-group .btn.active {
  background: #F56C6C;
  color: #fff;
  cursor: pointer;
}