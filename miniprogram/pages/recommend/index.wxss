.wrap {
  overflow: hidden;
}
.header-img {
  position: relative;
  width: 670rpx;
  height: 446rpx;
  margin: 10rpx auto;
}
.header-img image {
  width: 100%;
  height: 100%;
}
.header-img .cover {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(255, 97, 0, 0.1);
}
.today-recommend {
  padding: 30rpx 40rpx;
  margin-top: 40rpx;
}
.today-recommend .title {
  font-size: 36rpx;
  text-align: center;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}
.poem-item {
  padding-top: 20rpx;
  text-align: center;
}
.poem-title {
  font-size: 34rpx;
  font-weight: bold;
  padding: 4rpx 0;
  letter-spacing: 10rpx;
  color: #333;
}
.poem-author {
  font-size: 24rpx;
  color: #999;
  padding: 10rpx 0;
}
.poem-sentence {
  padding: 10rpx 0;
  font-size: 32rpx;
  color: #333;
  letter-spacing: 2rpx;
}
.poem-desc {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  margin-top: 20rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
}